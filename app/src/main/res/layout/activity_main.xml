<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context="com.baway.liuhaifeng20170904.MainActivity">
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="颜色"
        android:layout_weight="8"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="加速"
        android:layout_weight="8"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="减速"
        android:layout_weight="8"/>
<com.baway.liuhaifeng20170904.RoundProgressBar
    android:id="@+id/progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:roundColor="#D1D1D1"
    app:roundProgressColor="@android:color/black"
    app:textColor="#9A32CD"
    app:textIsDisplayable="false"
    app:roundWidth="10dip"
    app:textSize="18sp"
    android:layout_weight="2"
    />
</LinearLayout>
